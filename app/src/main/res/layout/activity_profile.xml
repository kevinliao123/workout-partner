<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/profile_image_size"
        android:layout_height="@dimen/profile_image_size"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/general_margin"
        android:clickable="true"
        android:src="@drawable/ic_person" />
    
    <EditText
        android:id="@+id/user_name"
        android:text="Display Name"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/profile_image"
        android:layout_marginTop="@dimen/general_margin"
        android:layout_centerHorizontal="true"
        android:layout_width="180dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/user_status"
        android:textSize="16sp"
        android:text="Hi this is user status"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/general_margin"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/user_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/age_label"
        android:text="Age: "
        android:textSize="16sp"
        android:layout_below="@id/user_status"
        android:layout_alignLeft="@id/user_status"
        android:layout_marginTop="@dimen/general_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/user_age"
        android:textSize="16sp"
        android:layout_marginLeft="@dimen/general_margin"
        android:layout_alignBaseline="@id/age_label"
        android:layout_toRightOf="@id/age_label"
        android:layout_width="60dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/weight_label"
        android:text="Weight: "
        android:textSize="16sp"
        android:layout_below="@id/user_age"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/general_margin_extra_large"
        android:layout_marginTop="@dimen/general_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/user_weight"
        android:textSize="16sp"
        android:layout_alignBaseline="@id/weight_label"
        android:layout_toRightOf="@id/weight_label"
        android:layout_marginLeft="@dimen/general_margin"
        android:layout_width="60dp"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/gender"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_weight"
        android:layout_marginLeft="@dimen/general_margin_extra_large"
        android:layout_alignTop="@+id/weight_label"
        android:textSize="16sp" />


    <Button
        android:id="@+id/update_profile_button"
        android:text="Update Profile"
        android:textAllCaps="false"
        android:textColor="@color/summer_red"
        android:background="@drawable/shape_rect_cornered_white"
        android:layout_width="@dimen/general_button_width"
        android:layout_height="@dimen/general_button_height"
        android:layout_marginBottom="@dimen/general_margin_extra_large"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>